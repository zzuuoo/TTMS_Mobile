<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddScheduleActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="影片"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"/>
        <Spinner
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/add_play_spinner"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="影厅"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"/>
        <Spinner
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:id="@+id/add_studio_spinner"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="日期"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/schedule_data_add"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:hint="year/month/day"
            android:gravity="center"
            android:inputType="date"
            android:background="@drawable/shape_button"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="时间"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/schedule_time_add"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:inputType="time"
            android:hint="hour:minute"
            android:gravity="center"
            android:background="@drawable/shape_button"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="价格"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_height="40dp"/>

        <EditText
            android:id="@+id/schedule_price_add"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:background="@drawable/shape_button"></EditText>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="确定"
            android:textColor="@color/green"
            android:textSize="24dp"
            android:id="@+id/sure_addschedule"
            android:background="@drawable/button_selector"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="取消"
            android:id="@+id/cancel_addschedule"
            android:layout_marginLeft="30dp"
            android:textColor="@color/red"
            android:textSize="24dp"
            android:background="@drawable/button_selector"/>
    </LinearLayout>



</LinearLayout>